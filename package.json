{
  "name": "js-hook",
  "version": "0.1.0",
  "description": "add hook to JavaScript",
  "scripts": {
    "start": "pnpm run build && pnpm run install:plugin",
    "install:plugin": "pnpm --filter \"whistle.hook-server\" install:plugin",
    "build": "pnpm run build:core && pnpm run build:hook-server",
    "build:hook-server": "pnpm hook-server build",
    "build:core": "pnpm core build",
    "hook-server": "pnpm --filter=whistle.hook-server",
    "core": "pnpm --filter=@js-hook/core",
    "demos": "pnpm --filter demos run dev",
    "test": "jest --all"
  },
  "keywords": [],
  "author": "22earth",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^27.5.1",
    "@types/node": "^17.0.38",
    "jest": "^28.1.0",
    "jest-extended": "^2.0.0",
    "ts-jest": "^28.0.3",
    "ts-node": "^10.8.0",
    "typescript": "^4.7.2"
  }
}